{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "isolatedModules": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/node_modules",
    "eclipseproof-cli/eslint.config.mjs",
    "eclipseproof-cli/test-cli.mjs",
    "eclipseproof-contract/eslint.config.mjs",
    "eclipseproof-contract/js-resolver.cjs",
    "eclipseproof-contract/src/managed/eclipseproof/index.d.ts",
    "eclipseproof-contract/src/managed/eclipseproof/index.js",
    "eclipseproof-contract/vitest.config.js",
    "eclipseproof-contract/vitest.setup.js",
    "frontend-vite-react/eslint.config.js",
    "mock-server.js"
  ]
}
